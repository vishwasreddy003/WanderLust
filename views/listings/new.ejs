<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
      <h1>Add a new Listing!</h1>
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="listing[title]"
          placeholder="Enter title for the Listing"
          class="form-control"
          required
        />

        <div class="invalid-feedback">
          Title must not be empty!
        </div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          placeholder="Enter description of Listing"
          rows="8"
          cols="20"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">
          Describe about your listing for better bookings!
        </div>
      </div>

    
      <div class="mb-3">
        <label for="image" class="form-label">Image</label>
        <input
          type="file"
          name="listing[image]"
          placeholder="Enter accessible link/url of the image"
          class="form-control"
        />
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            name="listing[price]"
            placeholder="1700"
            class="form-control"
            required
          />

          <div class="invalid-feedback">
            Enter a valid Value!
          </div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            name="listing[country]"
            placeholder="India"
            class="form-control"
            required
          />

          <div class="invalid-feedback">
            Country must not be empty
          </div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          name="listing[location]"
          placeholder="Hyderabad, Telanagana"
          class="form-control"
          required
        />
        <div class="invalid-feedback">
          Location must not be empty
        </div>
      </div>

      <button class="btn btn-dark add-btn mt-3">ADD</button>
      <br /><br />
    </form>
  </div>
</div>
